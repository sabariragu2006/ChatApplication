<%- include('layouts/header.ejs') %>
<h2 class="mb-4">Group Chatting</h2>

<div class="row">
  <div class="col-md-4">
    <ul class="list-group">
      <% if (myGroups.length > 0) { %>
        <% for (let i = 0; i < myGroups.length; i++) { %>
          <li class="list-group-item list-group-item-dark cursor-pointer group-list" data-id="<%= myGroups[i]['_id'] %>">
            <img
              src="/<%= myGroups[i]['image'] %>"
              width="50px"
              height="50px"
            />
            <%= myGroups[i]['name'] %>
          </li>
        <% } %> <!-- Closing the for loop properly -->
      <% } %> <!-- Closing the if statement properly -->

      <!-- show joined groups -->
      <% if (joinedGroups.length > 0) { %>
        <% for (let i = 0; i < joinedGroups.length; i++) { %>
          <% if (joinedGroups[i]['group_id']) { %> <!-- Check if group_id exists -->
            <li class="list-group-item list-group-item-dark cursor-pointer group-list" data-id="<%= joinedGroups[i]['group_id']['_id'] %>">
              <img
                src="/<%= joinedGroups[i]['group_id']['image'] %>"
                width="50px"
                height="50px"
              />
              <%= joinedGroups[i]['group_id']['name'] %>
            </li>
          <% } %> <!-- Closing the if statement to check group_id -->
        <% } %> <!-- Closing the for loop properly -->
      <% } else { %>
        <li class="list-group-item">No groups available</li>
      <% } %> <!-- Closing the if statement properly -->
    </ul>
  </div>
  <div class="col-md-8">
    <h3 class="group-start-head">Click to start chat</h3>
    <div class="group-chat-section">
      <div id="group-chat-container"></div>
      <form action="" id="group-chat-form">
        <input type="text" placeholder="Enter Message" id="group-message" name="message">
        <input type="submit" class="btn btn-primary">
      </form>
    </div>
  </div>
</div>

<!-- Delete Group Chat Modal -->
<div class="modal fade" id="deleteGroupChatModel" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Delete Chat</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form id="delete-group-chat-form">
        <div class="modal-body">
          <input type="hidden" name="id" id="delete-group-message-id">
        <p>Are you Sure you want to delete below Message?</p>     
          <p><b id="delete-group-message"></b></p>
      </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-danger">Delete</button>
        </div>
      </div>
      </form>
     
  </div>
</div>

<!-- Update chat Modal -->
<div class="modal fade" id="editGroupChatModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Edit Chat</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form id="update-group-chat-form">
        <div class="modal-body">
          <input type="hidden" name="id" id="edit-group-message-id">
          <input type="text" class="w-100" name="=message" id="update-group-message" required placeholder="Enter Message">
      </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-danger">Update</button>
        </div>
      </div>
      </form>
     
  </div>
</div>


<%- include('layouts/footer.ejs') %>
